<!-- 5.5.4 登録失敗時のエラーメッセージを表示しよう -->
<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <!-- The form contains <%= pluralize(@user.errors.count, "error") %> -->
      <!-- 8x.5 フラッシュメッセージの修正 -->
      入力エラーが<%= @user.errors.count %>件ありました。
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>