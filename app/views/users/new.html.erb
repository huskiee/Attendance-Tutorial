<!-- 3.5.3 ビューの作成 -->
<% provide(:title, 'Sign up') %>
<h1>ユーザー登録</h1>

<!-- 5.5 ユーザー登録ページを作ろう -->
<!-- <p>このページでは必要な項目を入力して、ユーザーを新規作成します。</p> -->
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <!-- 5.5.4 登録失敗時のエラーメッセージを表示しよう -->
      <%= render 'shared/error_messages' %>
      <%= f.label :name, class: "label-signup" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, class: "label-signup" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, class: "label-signup" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, "Confirmation", class: "label-signup" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div>